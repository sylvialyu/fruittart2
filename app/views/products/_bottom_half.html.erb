<!-- 导航栏 -->
    <div class="col-centered row">
      <ul class="nav nav-tabs nav-justified">
        <li class="active">
          <a href="#tab_default_1" data-toggle="tab" class="no-dec">Package Info</a>
        </li>
        <li>
          <a href="#tab_default_2" data-toggle="tab" class="no-dec">Comment</a>
        </li>
      </ul>
    </div>

    <div class="tab-content">

    <!-- 商品包装信息 -->
      <div class="tab-pane active"  id="tab_default_1">
          <%= render "details" %>
      </div>

      <!-- 商品评论 -->
      <div class="tab-pane" id="tab_default_2">

        <!-- 如果已經評分過就不要出現評分區 -->
        <% unless current_user && @product.find_review(current_user) %>

          <%= simple_form_for([@product, @product.reviews.build]) do |f|%>
            <div class="form-group">
              <%= f.input :body, label: "Please tell us what you think ", input_html: { class: "form-control"} %>
            </div>

            <div class="form-actions pull-right">
              <%= f.submit "Comment", disable_with: "Submiting...", class: "buy"%>
            </div>
            <div class=" clearfix pull-left">
              <div id="star-freshness">Rate Now： </div>
            </div>
          <% end %>
        <% end %>

        <!--點擊隱藏/展開reviews-->
        <div id="comment" class="collapse">
          <% @reviews.each do |review| %>
          <div class="star-freshness" data-score= <%= review.freshness %> ></div>
          <!--  review.user.display_name  -->
            <p>Comment： <%= review.body %>
          <!-- Admin可刪除留言 -->
            <% if current_user && current_user.admin? %>
              <%= link_to("Delete", product_review_path(@product, review), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-sm pull-right") %>
            <% end %>
            </p>
          <% end %>
        </div>

      </div>
    </div>
