<!-- 导航栏 -->
    <div class="col-centered row">
      <ul class="nav nav-tabs nav-justified">
        <li class="active">
          <a href="#tab_default_1" data-toggle="tab" class="no-dec">Package Info</a>
        </li>
        <li>
          <a href="#tab_default_2" data-toggle="tab" class="no-dec">Comment</a>
        </li>
      </ul>
    </div>

    <div class="tab-content">

    <!-- 商品包装信息 -->
      <div class="tab-pane active"  id="tab_default_1">
          <%= render "details" %>
      </div>

    <!-- 商品评论 -->
    <div class="tab-pane" id="tab_default_2">

      <div class="col-md-12 comment">

        <div class="typein-box">
          <!-- 如果已經評分過就不要出現評分區 -->
        <% unless current_user && @product.find_review(current_user) %>
          <%= simple_form_for([@product, @product.reviews.build]) do |f|%>
            <div class="review-comment-form">
              <%= f.input :body, label: "Please tell us what you think", input_html: { class: "form-control"} %>
            </div>

            <div class="form-actions pull-left">
              <%= f.submit "Comment", disable_with: "Submiting...", class: "btn btn-sm btn-default"%>
            </div>
          <% end %>
        <% end %>
          </div>

          <hr>

        <!--點擊隱藏/展開reviews-->
        <div class="feedback">
        <% @reviews.each do |review| %>
        <div class="row feedback-details">
          <div class="col-md-8">
            <%= review.body %>
          </div>
          <!-- <div class="col-md-4">
            <%= review.created_at %>
          </div> -->
        </div>
        <div class="" data-score= <%= review.freshness %> ></div>
        <!--  review.user.display_name  -->
        <% end %>
        </div>
      </div>


      </div>
    </div>
