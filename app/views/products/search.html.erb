<div class="main-sec result">
  <div class="row">
      <div class="col-md-8 col-centered">
  <% if @query_string.blank? %>
      <div class="search-info-title">
        What are you looking for?
      </div>

    <% elsif @products.blank? %>
      <br>
      <h4 class="search-info-title">Can't find related info, please try again</h4>
    <% else %>
      <h4 class="search-info-title"> Result About "<%= @query_string %>" </h4>

      <div class="search-result">
        <% @products.each do |product| %>
          <div class="col-xs-6 col-md-3">
            <%= link_to product_path(product) do %>
              <% if product.photos.present? %>
                <%= image_tag(product.photos[1].avatar.thumb.url, class: "thumbnail") %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
            <% end %>
            <%= product.title %> ï¿¥ <%= product.price %>
          </div>
        <% end %>
      </div>

      <div class="text-center">
        <%= will_paginate(@products, renderer: BootstrapPagination::Rails) %>
      </div>
    <% end %>
  </div>
</div>
</div>
