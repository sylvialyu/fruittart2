<div class="col-md-4 col-md-offset-4">
  <%= simple_form_for([@product, @product.reviews.build]) do |f|%>
    <h3>
      <div class=" clearfix ">
        <div id="star-freshness">新鲜： </div>
      </div>
      <div class=" clearfix">
        <div id="star-look">外观： </div>
      </div>
      <div class="clearfix">
        <div id="star-price">价格： </div>
      </div>
    </h3>
    <div class="form-group">
      <%= f.input :body, label: "内容", input_html: { class: "form-control"} %>
    </div>

    <div class="form-actions">
      <%= f.submit "提交", disable_with: "Submiting...", class: "btn btn-info"%>
    </div>
  <% end %>
</div>

<script src="/assets/application.js"></script>
