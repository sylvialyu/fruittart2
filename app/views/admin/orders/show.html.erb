<div class="row">
  <div class="col-md-12">

    <h2>Order Detail（<%= render_order_paid_state(@order) %>）</h2>

    <%= render "admin/orders/state_option", order: @order %>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="70%">Product Detail</th>
          <th>Price</th>
          <th>Quantity</th>
        </tr>
      </thead>
      <tbody>
        <% @product_lists.each do |product_list| %>
        <tr>
          <td><%= product_list.product_name %></td>
          <td><%= product_list.product_price %></td>
          <td><%= product_list.quantity %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="clearfix">
      <span class="pull-right">
        $ <%= @order.total %> in Total
      </span>
    </div>

    <hr>

    <h2>Shipping Information</h2>

    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>Billing Address</td>
        </tr>
        <tr>
          <td><%= @order.billing_name %> - <%= @order.billing_address %></td>
        </tr>
        <tr>
          <td>Shipping Address</td>
        </tr>
        <tr>
          <td><%= @order.shipping_name %> - <%= @order.shipping_address %></td>
        </tr>
      </tbody>
    </table>

  </div>
</div>
